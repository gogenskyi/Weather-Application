<UserControl x:Class="WasylWeather.Views.Controls.TopLeftStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WasylWeather.Views.Controls"
             xmlns:vm="clr-namespace:WasylWeather.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.DataContext>
        <vm:MainViewModel/>
    </UserControl.DataContext>
    <Grid Background="Transparent">
        <StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label FontSize="16" HorizontalAlignment="Left"  FontWeight="Bold" Foreground="Black">
                    <Label.Content>
                        <Image Source="{Binding WeatherIconUrl}" Width="32" Height="32"/>
                    </Label.Content>
                </Label>
                <Label Content="{Binding WeatherText}" FontSize="16" FontWeight="Bold" Foreground="Black"/>
            </StackPanel>
            <TextBlock Text="{Binding Location}" FontSize="16" FontWeight="Bold" Foreground="Black" Margin="5,0,5,0"/>
        </StackPanel>
    </Grid>
</UserControl>
