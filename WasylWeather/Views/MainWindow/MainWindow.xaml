<Window x:Class="WasylWeather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WasylWeather"
        xmlns:cntrl="clr-namespace:WasylWeather.Views.Controls"
        xmlns:vm="clr-namespace:WasylWeather.ViewModels"
        mc:Ignorable="d"
        Title="Null Weather" Height="450" Width="800" ResizeMode="CanResize" ShowInTaskbar="True" ShowActivated="True" WindowState="Normal" WindowStyle="None" AllowsTransparency="True">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Background="Transparent">
        <Border CornerRadius="12" BorderThickness="0" Padding="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--Status Bar-->
                <Grid x:Name="StatusBar">
                    <cntrl:TopLeftStatusBar Grid.Column="0" Grid.Row="0" Margin="6" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
                <!--Search-->
                <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
                    <cntrl:TextBoxSearch Grid.Column="1" Grid.RowSpan="2" Margin="6" Width="200" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
